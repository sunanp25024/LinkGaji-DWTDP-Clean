# Google Drive Folder ID for file uploads
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# =================================================
# 3. APPLICATION CONFIGURATION
# =================================================
# Environment mode
NODE_ENV=production

# Vercel deployment flag
VERCEL=1

